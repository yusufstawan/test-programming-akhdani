generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  PEGAWAI
  SDM
  ADMIN
}

enum PerdinStatus {
  DRAFT
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  role      Role     @default(PEGAWAI)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  perdins Perdin[]
}

model City {
  id         String   @id @default(uuid())
  name       String
  latitude   Float
  longitude  Float
  province   String
  island     String
  isOverseas Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  perdinsOrigin      Perdin[] @relation("PerdinOrigin")
  perdinsDestination Perdin[] @relation("PerdinDestination")
}

model Perdin {
  id             String       @id @default(uuid())
  userId         String
  purpose        String
  startDate      DateTime
  endDate        DateTime
  originCityId   String
  destCityId     String
  totalDays      Int
  totalAllowance Float        @default(0)
  status         PerdinStatus @default(PENDING)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  user       User @relation(fields: [userId], references: [id])
  originCity City @relation("PerdinOrigin", fields: [originCityId], references: [id])
  destCity   City @relation("PerdinDestination", fields: [destCityId], references: [id])
}
